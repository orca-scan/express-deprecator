{
  "name": "express-mute",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "NODE_ENV=test node_modules/.bin/jasmine --config=tests/jasmine/config.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orca-scan/express-mute.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/orca-scan/express-mute/issues"
  },
  "homepage": "https://github.com/orca-scan/express-mute#readme",
  "devDependencies": {
    "eslint": "^4.6.1",
    "express": "^4.13.4",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.2.0",
    "jasmine": "^4.5.0",
    "jasmine-console-reporter": "^3.1.0",
    "jasmine-xml-reporter": "^1.2.1",
    "supertest": "^6.3.3"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "browser": false
    },
    "globals": {
      "Promise": true,
      "expect": true,
      "expectAsync": true,
      "it": true,
      "describe": true,
      "beforeEach": true,
      "afterEach": true,
      "beforeAll": true,
      "afterAll": true,
      "jasmine": true,
      "isFinite": true
    },
    "rules": {
      "no-console": "off",
      "import/extensions": [
        "ignorePackages"
      ],
      "prefer-promise-reject-errors": "off",
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "func-names": 0,
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1,
          "MemberExpression": "off"
        }
      ],
      "max-len": [
        2,
        180,
        4,
        {
          "ignoreUrls": true,
          "ignoreComments": false
        }
      ],
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Router",
            "ObjectId",
            "DEBUG"
          ],
          "properties": false
        }
      ],
      "no-underscore-dangle": 0,
      "no-unused-vars": [
        "warn"
      ],
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ],
      "vars-on-top": [
        "off"
      ],
      "no-param-reassign": [
        "off"
      ],
      "no-lone-blocks": [
        "off"
      ],
      "padded-blocks": 0,
      "prefer-template": [
        "off"
      ],
      "prefer-arrow-callback": [
        "off"
      ],
      "prefer-destructuring": [
        "off"
      ],
      "newline-per-chained-call": [
        "error",
        {
          "ignoreChainWithDepth": 2
        }
      ],
      "default-case": [
        "off"
      ],
      "wrap-iife": [
        2,
        "inside"
      ],
      "no-plusplus": [
        "off"
      ],
      "require-jsdoc": [
        "warn",
        {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
          }
        }
      ],
      "object-shorthand": "off",
      "space-before-function-paren": "off",
      "strict": "off",
      "valid-jsdoc": [
        "error"
      ]
    }
  }
}
